<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>HomeControllerAdmin</servlet-name>
        <servlet-class>com.jsp_servlet_base.controller.admin.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControllerAdmin</servlet-name>
        <url-pattern>/home-admin</url-pattern>
    </servlet-mapping>
<!--    -->
    <servlet>
        <servlet-name>HomeControllerWeb</servlet-name>
        <servlet-class>com.jsp_servlet_base.controller.web.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControllerWeb</servlet-name>
        <url-pattern>/home-web</url-pattern>
    </servlet-mapping>
</web-app>